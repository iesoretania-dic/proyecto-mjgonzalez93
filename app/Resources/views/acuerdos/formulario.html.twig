{% extends 'layout.html.twig' %}

{% block title %}
    Subida archivo
{% endblock %}

{% block content %}
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Formulario subida archivos acuerdos</div>
                <div class="panel-body">
                    <form action="{{ path('subida acuerdo') }}" method="post" class="form" role="form" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="hidden" name="MAX_FILE_SIZE" value="1073741824" />
                            <input type="file" name="archivo" id="archivo"/>
                        </div>
                        <div class="form-group">
                            <button type="submit" name="enviar" class="btn btn-info btn-block" tabindex="3">Subir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}