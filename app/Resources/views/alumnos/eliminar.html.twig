{% extends 'layout.html.twig' %}

{% block title %}
    Eliminar: {{ alumno.reference }}
{% endblock %}

{% block content %}
    {% for mensaje in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ mensaje }}
        </div>
    {% endfor %}
    <h1>{{ alumno.firstName }}, {{ alumno.lastName }}</h1>

    <div class="alert alert-warning">
        ¿Está seguro de que desea eliminar al alumno? La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('listado_alumnos') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de alumnos</a>
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar alumno</button>
    </form>

{% endblock %}