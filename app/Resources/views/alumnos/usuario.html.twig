{% extends 'layout.html.twig' %}
{% set ruta = app.request.get('_route') %}
{% block title %}
    {% if ruta == 'creacion_alumnos' %}
        Nuevo alumno
    {% elseif ruta == 'edicion_alumnos' %}
        Editar alumno
    {% endif %}
{% endblock %}

{% block validacion %}
    <script src="{{ asset('js/validacion.js') }}"></script>
{% endblock %}

{% block content %}
    {{ form_start(formulario) }}
    {{ form_widget(formulario) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar cambios</button>
            <a href="{{ path('listado_alumnos') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de alumnos</a>
        </div>
    </div>
    {{ form_end(formulario) }}
{% endblock %}