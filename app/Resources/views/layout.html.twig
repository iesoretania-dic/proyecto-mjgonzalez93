                        {% else %}
                            <li><a href="{{ path('usuario_entrar') }}"><i class="fa fa-sign-in"></i> Entrar</a></li>
                        {% endif %}
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>
    {% endblock %}
    <div class="container">
        {% for mensaje in app.flashes('exito') %}
            <div class="alert alert-success">
                {{ mensaje }}
            </div>
        {% endfor %}
        {% for mensaje in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ mensaje }}
            </div>
        {% endfor %}
        {% block content %}{% endblock %}
    </div>
{% endblock %}