                                <li{% if ruta == 'subida_alumno' %} class="active"{% endif %}><a href="{{ path('subida alumno') }}"><i class="fa fa-file"></i> A침adir desde fichero</a></li>
                                <li{% if ruta == 'listado_alumnos' %} class="active"{% endif %}><a href="{{ path('listado_alumnos') }}"><i class="fa fa-list"></i> Listado alumnos</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user %}
                            <li class="dropdown">
                                <a href="" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"></i> {{ app.user.loginUsername }} <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"><i class="fa fa-user"></i> Mi perfil</a></li>
                                    <li><a href="{{ path('password_propia') }}"><i class="fa fa-key"></i> Cambiar contrase침a</a></li>
                                </ul>
