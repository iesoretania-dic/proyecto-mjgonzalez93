{% extends 'layout.html.twig' %}

{% block title %}
    Eliminar: {{ manager.reference }}
{% endblock %}

{% block content %}
    {% for mensaje in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ mensaje }}
        </div>
    {% endfor %}
    <h1>{{ manager.firstName }}, {{ manager.lastName }}</h1>

    <div class="alert alert-warning">
        ¿Está seguro de que desea eliminar al manager? La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('listado_managers') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de manager</a>
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar manager</button>
    </form>

{% endblock %}